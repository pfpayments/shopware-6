{% set weArePlanetData = page.extensions.weArePlanetData %}
{% if weArePlanetData and weArePlanetData.integration %}
	{% if weArePlanetData.integration in ['iframe'] %}
		{% for transactionPossiblePaymentMethod in weArePlanetData.transactionPossiblePaymentMethods %}
			<div class="card checkout-card">
				<div class="card-body">
					<div class="card-title">
						{{ transactionPossiblePaymentMethod.getName() }}
					</div>
					<div id="weareplanet-payment-panel"
						class="weareplanet-payment-panel"
						data-weareplanet-checkout-plugin="true"
						data-id="{{ transactionPossiblePaymentMethod.getId() }}">
						<div id="weareplanetLoader"><div></div></div>
						<input value="false" type="hidden" name="weareplanet_payment_handler_validation_status"
							form="confirmOrderForm">
						<div id="weareplanet-payment-iframe"
							class="weareplanet-payment-iframe"></div>
					</div>
				</div>
			</div>
		{% endfor %}
	{% endif %}
{% endif %}