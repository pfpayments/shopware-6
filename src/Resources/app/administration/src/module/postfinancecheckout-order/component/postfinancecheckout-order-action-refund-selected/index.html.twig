{% block postfinancecheckout_order_action_refund_selected %}
<sw-modal variant="small"
		  :title="$tc(`postfinancecheckout-order.modal.title.refund`)"
		  @modal-close="$emit('modal-close')">

	{% block postfinancecheckout_order_action_refund_confirm_button_selected %}
	<template #modal-footer>
		<mt-button variant="primary" @click="refundSelected()">
			{{ $tc('postfinancecheckout-order.refundAction.confirmButton.text') }}
		</mt-button>
	</template>
	{% endblock %}

	<mt-loader v-if="isLoading"></mt-loader>
</sw-modal>
{% endblock %}
